@model ConquerSite.Models.PlayerModels

@{
    ViewData["Title"] = "Login";
}

<div class="form-container">
    <div class="form">
        <h2 class="form-title">Login</h2>

        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Username", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-input", placeholder = "Your username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Your password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Login</button>
                <a href="@Url.Action("Index", "Home")" class="btn-back">Back</a>
            </div>

            <div class="form-links">
                <a href="@Url.Action("RecoverAccount", "Registro")" class="form-link">Forgot Password?</a>
                <a href="@Url.Action("Register", "Registro")" class="form-link">Create Account</a>
            </div>
        }
    </div>
</div>

