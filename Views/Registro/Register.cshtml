@model ConquerSite.Models.PlayerModels

@{
    ViewData["Title"] = "Register";
}

<div class="form-container">
    <div class="form">
        <h2 class="form-title">Create Account</h2>

        @using (Html.BeginForm("Register", "Registro", FormMethod.Post, new { @class = "registration-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Username, "Username", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-input", placeholder = "Choose a username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email", new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-input", placeholder = "Your email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Password", new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-input", placeholder = "Your password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Create Account</button>
                <a href="@Url.Action("Index", "Home")" class="btn-back">Back</a>
            </div>
        }
    </div>
</div>

