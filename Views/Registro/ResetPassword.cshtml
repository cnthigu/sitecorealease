@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Redefinir Senha";
}

<div class="form-container">
    <div class="form">
        <h2 class="form-title">Redefinir Senha</h2>

        @using (Html.BeginForm("ResetPassword", "Registro", FormMethod.Post, new { @class = "reset-password-form" }))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Token)
            @Html.HiddenFor(m => m.Email)

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, "Nova Senha", new { @class = "form-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-input", placeholder = "Digite sua nova senha" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, "Confirmar Senha", new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-input", placeholder = "Confirme sua nova senha" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-message" })
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Redefinir Senha</button>
                <a href="@Url.Action("Login", "Login")" class="btn-back">Voltar para Login</a>
            </div>
        }
    </div>
</div>

